  
<%- include('./partials/headerDr.ejs'); %>
<%- include('./partials/sideMenuDr.ejs'); %>


<style>
    .scrollable {
       height: 1000px; /* or any value */
        overflow-y: auto;
    }
    #profile-image{
    border: 1px solid black;
    margin-left: 11030;
    margin: 20px 20px;
    }
    #actions-container{
    margin-left: 30%;
    border: 1px solid black;
    background-color:white;
    float: left;
  }
    .report-image{
        height: 150px;
        width: 150px;
    }
    .report-list{
       border: 1px solid black;
       background-color: #56CC9D;
       margin-left: 30px;
       float: left;
    }
  
</style>
<body>
<div class="scrollable" id="data">
    <h4 class="title" id="title"> More Details of <%=patient.name%> </h4><br>

<!-- For details about patient -->
<section class="actions mt-4">
    <div class="container">
        <div class="row">
          <div id="actions-container" class="card col-md-5">
          <ul class="list-group list-group-flush">
            <div id="profile-image" class="col-md-5"> 
              <img src="<%=patient.imageUrl%>" class="card-img"></img>
             </div> 
                  <li class="list-group-item"><b>Name :</b> <%=patient.name%></li>
                  <li class="list-group-item"><b>Id :</b> <%=patient.id%> </li>
                  <li class="list-group-item"><b>Token Number :</b> <%=patient.tokennumber%> </li>
                  <li class="list-group-item"><b>Email :</b> <%=patient.email%></li>
                  <li class="list-group-item"><b>Gender :</b> <%=patient.gender%> </li>
                  <li class="list-group-item"><b>Age :</b> <%=patient.age%> </li>
                  <li class="list-group-item"><b>Address :</b> <%=patient.address%> </li>
                  <li class="list-group-item"><b>Joined :</b><%=patient.date%> </li>
                </ul> 
            </div>
            </div>
        </div>
  </section>
  <br> 
    <!-- For report display -->
    <h4 class="title">Uploads </h4><br> 

    <br>    
<% report.forEach(report => { %>
 
<ul class="report-list">
<div class="row">
        <div id="report" class="card">
        <div class="card-body">
            <img class="report-image" src= "<%= report.imageUrl %>" alt="Image Here"></img>
            <br>
            <br>
          <h6> <b>Description :</b> <%= report.title %></h6>
          <h6> <b>Date Uploaded: </b> <%= report.date %></h6>
          <a href="<%= report.imageUrl %>" class="btn btn-primary">View Report</a>
        </div>
      </div>
</div> 
</ul> 
<% }) %>    

</body>
</html>