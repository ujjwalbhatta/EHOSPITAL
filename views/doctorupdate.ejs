<section id="usersignUpForm">
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card">
            <div class="card-header text-center">
              <h4>Please Update Your Information for patients</h4>
            </div>
              <div class="card-block">
                <form class="p-3" action="/doctor/makeappointments" method="POST">
                    
                  <div class="form-group">
                    <label class="form-control-label">Available Days</label>
                    <input type="text" name="days" placeholder="Available Days" class="form-control" required>
                  </div>
          
                   <div class="form-group">
                    <label class="form-control-label">Available Time</label>
                    <input type="text" name="time" placeholder="Available Time" class="form-control" required>
                  </div>
  
                  <div class="form-group">
                    <label class="form-control-label">Shift</label>
                    <select name="shift" class="form-control" >
                      <option name="day">Day</option>
                      <option name="night">Night</option>
                    </select>
                  </div>
                  
                  <button type="submit" class="btn btn-primary btn-block">Update</button>
                  <%- include('./partials/messages.ejs'); %>
                </form>
              </div>
          </div>
        </div>
      </div>
    </div>
